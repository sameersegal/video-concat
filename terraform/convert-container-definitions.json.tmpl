            }
        },
        "mountPoints": [
            {
                "containerPath":"/tmp/workdir/scratch",
                "sourceVolume": "scratch-storage"
            }
        ],        
        "portMappings": [],
        "volumesFrom": [],
        "resourceRequirements" : [
            {
                "type" : "GPU", 
                "value" : "1"
            }
        ]
    }
